{
  "name": "openphp/utils",
  "description": "Utilities for PHP",
  "keywords": [
    "php",
    "utils",
    "utilities"
  ],
  "homepage": "https://github.com/openphp/utils",
  "license": "Apache-2.0",
  "type": "library",
  "authors": [
    {
      "name": "wangzhiqiang",
      "email": "zhiqiangwang@aliyun.com"
    }
  ],
  "require": {
    "ext-mbstring": "*",
    "ext-ctype": "*",
    "ext-json": "*",
    "ext-bcmath": "*",
    "ext-posix": "*",
    "ext-curl": "*"
  },
  "autoload": {
    "files": [
      "src/functions/global.php"
    ],
    "psr-4": {
      "Openphp\\": "src/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5"
  },
  "autoload-dev": {
    "psr-4": {
      "Openphp\\Tests\\": "tests"
    }
  },
  "scripts": {
    "fresh": [
      "rm -rf vendor composer.lock",
      "composer install"
    ],
    "tests": [
      "php vendor/bin/phpunit"
    ]
  }
}
